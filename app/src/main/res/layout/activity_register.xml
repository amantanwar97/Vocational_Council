<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#feffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        tools:context="com.example.user.vocational_council.Register">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#6e1a4b"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="25dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="#f9f6f6"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                app:cardBackgroundColor="#f4d3e6"
                android:elevation="35dp"

                app:cardCornerRadius="20dp"
                app:cardElevation="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="430dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:drawableStart="@drawable/ic_person_outline_black_24dp"
                        android:hint="enter user name"
                        android:textSize="17dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_https_black_24dp"
                        android:hint="enter password"
                        android:inputType="textPassword"
                        android:textSize="17dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_email_black_24dp"
                        android:hint="Email"
                        android:textSize="17dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_phonelink_ring_black_24dp"
                        android:hint="Phone"
                        android:textSize="17dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_location_on_black_24dp"
                        android:hint="Enter your current address"
                        android:textSize="17dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_content_paste_black_24dp"
                        android:hint="enter your 10th marks"
                        android:textSize="17dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_content_paste_black_24dp"
                        android:hint="enter your 12th marks"
                        android:textSize="17dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_content_paste_black_24dp"
                        android:hint="enter your Graduation degree"
                        android:textSize="17dp" />


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="510dp"
                app:cardBackgroundColor="#6e1a4b"
                app:cardCornerRadius="30dp"
                app:cardElevation="30dp">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SUBMIT"
                    android:textColor="#fcf9f9"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="50dp"
                app:cardElevation="30dp"
                android:elevation="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/regis" />

            </android.support.v7.widget.CardView>


        </RelativeLayout>




    </LinearLayout>
</ScrollView>